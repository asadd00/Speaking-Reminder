<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.HomeFragment">

    <com.rodolfonavalon.shaperipplelibrary.ShapeRipple
        android:id="@+id/shapeRipple"
        android:layout_width="250dp"
        android:layout_height="250dp"
        custom:ripple_stroke_width="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivRecord"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/ic_dummy_clock"
        android:text="@string/start"
        app:layout_constraintBottom_toBottomOf="@+id/shapeRipple"
        app:layout_constraintEnd_toEndOf="@+id/shapeRipple"
        app:layout_constraintStart_toStartOf="@+id/shapeRipple"
        app:layout_constraintTop_toTopOf="@+id/shapeRipple" />

    <Button
        android:id="@+id/bReminderList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/reminder_list"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvRecord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/start"
        app:layout_constraintEnd_toEndOf="@+id/ivRecord"
        app:layout_constraintStart_toStartOf="@+id/ivRecord"
        app:layout_constraintTop_toBottomOf="@+id/ivRecord" />

</androidx.constraintlayout.widget.ConstraintLayout>